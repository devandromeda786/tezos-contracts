{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Auction Tests",
            "program": "${workspaceFolder}/auctions/node_modules/mocha/bin/_mocha",
            "args": [
                "--slow",
                "0",
                "--timeout",
                "0",
                "${workspaceFolder}/auctions/test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}/auctions",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Bids Tests",
            "program": "${workspaceFolder}/bids/node_modules/mocha/bin/_mocha",
            "args": [
                "--slow",
                "0",
                "--timeout",
                "0",
                "${workspaceFolder}/bids/test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}/bids",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Sales Tests",
            "program": "${workspaceFolder}/exchange-v3/node_modules/mocha/bin/_mocha",
            "args": [
                "--slow",
                "0",
                "--timeout",
                "0",
                "${workspaceFolder}/exchange-v3/test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}/exchange-v3",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}